<% layout('headers/boilers') -%>
        <div class="mt-5">
            <div class="row">
                <h1 class="text-center">Edit <%= data.name %> </h1>
                <div class="col-6 offset-3">
                    <form action="/post/edit/<%= data._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" value="<%= data.name %>" type="text" id="title" name="name" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="location" value="<%= data.location %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Default file input example</label>
                            <input class="form-control" type="file" id="formFile" name="img" multiple required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Campground Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                                    aria-describedby="price-label" value="<%= data.price %>" name="price" required>
                            </div>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description" name="description" rows="10" cols="10" style="text-align:justify"
                                required><%= data.description %></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <% for(let x = 0; x < data.img.length; x++){ %>
                                <img src="<%= data.img[x].thumb %> " class="img-thumbnail" alt="..." crossorigin="anonymous">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image- <%= x %>" value="<%= data.img[x].filename %>" name="deleteImages[]">
                                </div>
                                <label for="image- <%= x %>">Delete</label>
                            <% } %>    
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Edit <%= data.name %> </button>
                        </div>
                    </form>
                    <a href="/">Back to all Camps</a>
                </div>
            </div>
        </div>
        </script>
