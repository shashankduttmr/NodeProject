<% layout('headers/boilers') -%>
    
    <div class="container mt-3 offset-0">
        <div id="map" style="width:100%; height: 500px;"></div>
        <% for (let x = 0; x < data.length; x++){%>
            <br>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(data[x].img.length > 0){ %> 
                            <img class="img-fluid" alt="" src="<%=data[x].img[0].url%>" crossorigin>
                        <% } %> 
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= data[x].title %> </h5>
                            <p class="card-text" style="text-align:justify"  ><%= data[x].description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= data[x].location%></small>
                            </p>
                            <form action="/post/<%=data[x]._id%>" method="get" style="display:inline">
                                <button class="btn btn-primary sm"><%= data[x].name %> </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }%>
    </div>
    <script crossorigin>
        const mapToken = '<%-process.env.mapBox%>';
        const Farms = {features:<%- JSON.stringify(data[0]) %>}
    </script>
    
    <script src="/js/clustermap.js"></script>